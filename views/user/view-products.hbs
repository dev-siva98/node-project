    <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products}}

                <div class="col-md-3 p-3">
                    <div class="card" style="width: 15rem; height: 20rem;">
                        <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="..." style="height: 11rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.pname}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to Cart</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>


        </div>
    </section>