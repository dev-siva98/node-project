<section>

    <div class="container">
        <h2 class="mt-4">Address</h2>
        <form method="post" action="" class="mt-5" id="order-form">
            <div class="row">
                <div class="col-md-6">
                    <div class="container mt-4 ">
                        <div class="card p-4" style="width: 100%;">
                            <h2 class="card-title ">Total Amount : Rs. {{total}}</h2>
                            <hr class="mx-4">
                            <p class="card-body">Payment Method</p>
                            <div class="d-flex" style="justify-content: space-evenly;">
                                <div class="form-check">
                                    <label  for="ONLINE">
                                    <input class="form-check-input" type="radio" name="payment" value="ONLINE" id="ONLINE" checked>
                                        Pay Now
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label  for="COD">
                                    <input class="form-check-input" type="radio" name="payment" id="COD" value="COD">
                                        Cash on Delivery
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="fname">Address <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="address" name="address"
                            placeholder="Enter Your Address">
                    </div>
                    <div class="form-group">
                        <label for="lname">Pincode <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="pincode" name="pincode"
                            placeholder="Enter Your Pincode">
                    </div>
                    <div class="form-group">
                        <label for="password">Mobile <span class="text-danger">*</span></label>
                        <input type="tel" class="form-control" name="mobile" id="mobile"
                            placeholder="Enter Your Number">
                    </div>
                    <input type="text" name="userId" id="" value="{{user._id}}" hidden>

                    <button type="submit" class="btn btn-primary mt-4" style="width: 100%; font-size: large;" onclick="spinner()"><span class="defaultButton">Place Order</span><span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
  </button>
                </div>
            </div>
        </form>
    </div>
</section>
<script>

    $("#order-form").submit((e) => {
        e.preventDefault()
        $.ajax({
            url: '/place-order',
            method: 'post',
            data: $('#order-form').serialize(),
            success: (response) => {
                if(response.codPayment)
                {
                    location.href='/order-success/'+response.orderId
                }
                else{
                    alert('Payment Success')
                    location.href='/order-success/'+response.orderId
                }
            }
        })
    })
    function spinner()=>{
        document.getElementsByClassName("defaultButton")[0].style.display = "block";
    }


</script>