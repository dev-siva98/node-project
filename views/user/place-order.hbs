<section>

    <div class="container">
        <h2 class="mt-4">Address</h2>
        <form method="post" action="" class="mt-5">
            <div class="row">
                <div class="col-md-6">
                    <div class="container mt-4 ">
                        <div class="card p-4" style="width: 100%;">
                            <h2 class="card-title ">Total Amount : Rs. {{total}}</h2>
                            <hr class="mx-4">
                            <p class="card-body">Payment Method</p>
                            <div class="d-flex" style="justify-content: space-evenly;">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="flexRadioDefault"
                                    id="flexRadioDefault1" checked>
                                <label class="form-check-label" for="flexRadioDefault1">
                                    Pay Now
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="flexRadioDefault"
                                    id="flexRadioDefault2">
                                <label class="form-check-label" for="flexRadioDefault2">
                                    Cash on Delivery    
                                </label>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="fname">Address <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="hname" name="fname"
                            placeholder="Enter Your Address">
                    </div>
                    <div class="form-group">
                        <label for="lname">Pincode <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="lname" name="lname"
                            placeholder="Enter Your Pincode">
                    </div>
                    <div class="form-group">
                        <label for="password">Mobile <span class="text-danger">*</span></label>
                        <input type="tel" class="form-control" name="mobile" id="mobile"
                            placeholder="Enter Your Number">
                    </div>
                    <a href="#" class="btn btn-primary mt-4" style="width: 100%; font-size: large;">Place Order</a>
                </div>
            </div>
        </form>
    </div>
</section>