<section>
  <div class="container">
    <div class="row mt-4">
      <div class="col-md-6 m-auto">
        <a href="/admin/add-product" class="btn btn-success">Add Product</a>
      </div>
    </div>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Price</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.pname}}</td>
          <td>{{this.price}}</td>
          <td>{{this.category}}</td>
          <td>{{this.description}}</td>
          <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg" lt=""></td>
          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure want to delete {{this.pname}}?')">Delete</a>
            
          </td>
        </tr>
        {{/each}}

      </tbody>
    </table>


  </div>

</section>